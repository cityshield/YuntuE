{
  "name": "yuntue",
  "version": "1.0.0",
  "description": "云图渲染客户端 - Electron版",
  "main": "dist-electron/main.js",
  "author": "YunTu Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "build:win": "export BUILD_TIMESTAMP=$(TZ='Asia/Shanghai' date '+%Y%m%d%H%M%S') && vue-tsc --noEmit && vite build && electron-builder --win",
    "build:win:portable": "BUILD_TIMESTAMP=$(TZ='Asia/Shanghai' date '+%Y%m%d%H%M%S') vue-tsc --noEmit && vite build && electron-builder --win --config.win.target=portable",
    "build:mac": "vue-tsc --noEmit && vite build && electron-builder --mac",
    "build:all": "BUILD_TIMESTAMP=$(TZ='Asia/Shanghai' date '+%Y%m%d%H%M%S') vue-tsc --noEmit && vite build && electron-builder --win --mac",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "ali-oss": "^6.23.0",
    "axios": "^1.7.2",
    "element-plus": "^2.11.5",
    "pinia": "^3.0.3",
    "socket.io-client": "^4.7.5",
    "spark-md5": "^3.0.2",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@types/spark-md5": "^3.0.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "sass": "^1.71.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vue-tsc": "^2.0.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yuntu.renderer",
    "productName": "盛世云图",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "config.ini",
        "to": "config.ini"
      }
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "build/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "盛世云图",
      "artifactName": "${productName}-v${version}-${env.BUILD_TIMESTAMP}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-v${version}-${env.BUILD_TIMESTAMP}-Portable.${ext}"
    }
  }
}
